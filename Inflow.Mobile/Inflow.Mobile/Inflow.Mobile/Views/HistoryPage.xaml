<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Inflow.Mobile.ViewModels"
             x:Class="Inflow.Mobile.Views.HistoryPage">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <ListView ItemsSource="{Binding SaleHistory}" RowHeight="120" Margin="10">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <StackLayout Grid.Column="0">
                                        <Label Text="SaleId: " HorizontalTextAlignment="Start" FontAttributes="Bold"/>
                                        <Label Text="SaleDate: " HorizontalTextAlignment="Start"/>
                                        <Label Text="Quantity: " HorizontalTextAlignment="Start"/>
                                        <Label Text="TotalDue: " HorizontalTextAlignment="Start"/>
                                    </StackLayout>

                                    <StackLayout Grid.Column="1">
                                        <Label Text="{Binding Id}" HorizontalTextAlignment="Start"/>
                                        <Label Text="{Binding SaleDate, StringFormat='{0:dd/MM/yyyy}'}" HorizontalTextAlignment="Start"/>
                                        <Label Text="{Binding Quantity}" HorizontalTextAlignment="Start"/>
                                        <Label Text="{Binding totalDue}" HorizontalTextAlignment="Start"/>
                                    </StackLayout>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
