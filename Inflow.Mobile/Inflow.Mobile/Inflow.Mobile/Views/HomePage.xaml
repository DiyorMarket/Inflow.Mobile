             xmlns:vm="clr-namespace:Inflow.Mobile.ViewModels"
             x:Class="Inflow.Mobile.Views.HomePage">
    <ContentPage.BindingContext>
        <vm:HomeViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
